<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="APPL_INFO">
    
    <!-- 지원자 정보 불러오기 -->
   	<select id="callin" resultType="HashMap">
   		select appl_NO, CRCLM_CD, RECRT_YEAR, KORN_FLNM, GENDER_CD, grade, interview, avg, department, total from APPL_INFO;
   	</select>

	<!-- 평가 점수 저장  -->
	<!-- 
	<update id="resultScore" parameterType="list">
		<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
	update APPL_INFO set interview=#{item.inter_score}, total=grade+#{item.inter_score} where appl_NO = #{item.appl_no};
		</foreach>
	</update>
	 -->
	
 <update id="resultScore" parameterType="java.util.List"> 
  <foreach collection="list" item="item" index="index"> 
    UPDATE 	APPL_INFO
    SET		interview=#{item.inter_score}
    WHERE 	appl_NO=#{item.appl_no}
  </foreach> 
</update>
	
	</mapper>